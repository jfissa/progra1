#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

float MontoTotal(float h, float c);

int main()
{
	float hora, costo, MT;
	cout <<"ingrese el numero de hora:";
	cin>> hora;
	cout <<"ingrese el valor de costo:";
	cin>> costo;
	MT= MontoTotal(hora, costo);
	cout<< "El monto del trabajador por hora es: " << MT << "BS.";
	getch();
	return 0;
}
float MontoTotal(float h, float c)

{
  float TOTAL= h*c;
  return TOTAL; 
}
