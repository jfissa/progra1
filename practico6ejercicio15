#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;
void main()

{

	int n,d,r,p,s,i;
	float b;
	do
	{
	cout<< "ingrese el numero que desea convertir:";
	cin>> n;
	}while(n<0);
	    
		cout<< "ingrese la base del numero:";
	    cin>> b;
	    
		i=0;
	    s=0;
	    while(n>0);
		{
		r=n%10;
		n=n/10;
		d=r*pow(b,i);
		i++;
		s=s+d;
		}
		
		
		cout<< "el numero en base 10 es:"<<s;
		getch();
    }
