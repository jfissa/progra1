// Ejemplo: calcular el volumen de un cilindro,
//se ingresan como datos de entrada su radio y altura

#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

float vol_cilindro(float r, float a); //prototipo de la función

int main() {
   
	
	float radio, altura, volumen;	
    
	cout <<"Ingrese el radio:" ; 
	cin >>radio;	
    cout <<"Ingrese la altura:"; 
	cin >> altura;	
    
	volumen= vol_cilindro(radio,altura); //llamada a la función
    cout <<"El volumen es:" <<volumen;    
    getch();
	return 0; 
 }


// declaración o definición de la función
float vol_cilindro (float r, float a)
 { float v= 3.141516*r*r*a ;	
    return v;    }
